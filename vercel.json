{
  "rewrites": [
    { "source": "/preview", "destination": "/api/preview" },
    {
      "source": "/(.*)",
      "has": [ { "type": "header", "key": "user-agent", "value": ".*(facebookexternalhit|Twitterbot|WhatsApp|facebookcatalog|LinkedInBot|TelegramBot|Discordbot|Slackbot|Google-InspectionTool|Pinterest|redditbot|SkypeUriPreview|Nuzzel|VKShare|W3C_Validator).*" } ],
      "destination": "/api/preview?path=/$1"
    }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml; charset=UTF-8"
        },
        {
          "key": "Content-Disposition",
          "value": "inline"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain; charset=UTF-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
